<div class="container">
  <div class="row">
    <div class="col">
      <h1>Manage my clothes</h1>
    </div>
  </div>


  <div class="row-product">
    <% @bookings.each do |booking| %>
      <div class="card-product">
        <img src="<%= cl_image_path booking.clothe.photo.key %>" class= img-card-product/>
        <div class="card-product-infos">
          <h2><%= booking.clothe.title %></h2>
          <p><strong><%= booking.clothe.size%></strong></p>
          <p><strong><%= booking.clothe.daily_price%></strong></p>
          <p><strong><%= booking.start_date%></strong></p>
          <p><strong><%= booking.end_date%></strong></p>
        </div>
          <p class="card-product-description"><strong><%= booking.clothe.description%></strong></p>
        <div class="validate-button">
          <%= link_to "Accept booking", accept_booking_path(booking), data: { 'turbo-method': :patch }, class:"btn btn-accept" %>
          <%= link_to "Decline booking", accept_booking_path(booking), data: { 'turbo-method': :patch }, class:"btn btn-decline" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="my_clothes">
    <a class="btn btn-new" href="/clothes/new">Create a Clothe +</a>
    <div class="row-clothes">
      <% @myclothes.each do |clothe| %>
          <div class="col-sm-12 col-md-4 mb-2">
            <div class="card-wrapper">
              <div class="card">
                <div class="card-img"style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path clothe.photo.key, height: 300, crop: :fill %>')">
                </div>
                <div class="card-info">
                  <p class="text-title"><%= clothe.title %></p>
                  <p class="text-body">( <%= clothe.size %> ) | <%= clothe.description %> </p>
                </div>
                <div class="card-footer">
                  <span class="text-title">â‚¬<%= clothe.daily_price %></span>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
