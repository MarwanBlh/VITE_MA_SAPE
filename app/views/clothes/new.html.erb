<div class="container d-flex justify-content-center">
  <div class="w-50 mt-4">
    <%= simple_form_for(@clothe) do |f| %>
      <%= f.input :photo, as: :file %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :daily_price %>
      <%= f.input :gender, collection: ["Man", "Woman"] %>
      <%= f.input :size, collection: ["XS", "S", "M", "L", "XL"] %>
      <%= f.input :category, collection: ["Jackets", "Parkas", "Sweaters", "Cardigans", "T-shirt", "Tank top", "Shirt", "Hoodie", "Crop top", "Sport sweat" "Socks", "Shoes"] %>
      <%= f.input :color, collection: ["Black", "White", "Blue", "Green", "Purple", "Pink", "Yellow", "Orange", "Brown", "Red"] %>
      <%# <%= f.label :picture %>
      <%# <%= f.number_field :picture %>
      <%= f.button :submit, "Create a clothe", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
