<div class="container">
  <div class="row">
    <div class="col">
      <h1>Manage my rentals</h1>
    </div>
  </div>


  <div class="row-product">
    <% @bookings.each do |booking| %>
      <div class="card-product">
        <img src="<%= cl_image_path booking.clothe.photo.key %>" class= img-card-product/>
        <div class="card-product-infos">
          <h2><%= booking.clothe.title %></h2>
          <p><strong><%= booking.clothe.size%></strong></p>
          <p><strong><%= booking.clothe.daily_price%></strong></p>
          <p><strong><%= booking.start_date%></strong></p>
          <p><strong><%= booking.end_date%></strong></p>
        </div>
          <p class="card-product-description"><strong><%= booking.clothe.description%></strong></p>
      </div>
    <% end %>
  </div>
</div>
